<Window x:Class="PL.Call.SingleCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        Title="Call Details" Height="500" Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Grid Margin="10" DataContext="{Binding RelativeSource={RelativeSource Self}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Call ID:" FontWeight="Bold"/>
            <TextBox Text="{Binding CurrentCall.CallId}" IsReadOnly="True" />

            <TextBlock Text="Type:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CurrentCall.CallType}" IsReadOnly="True"/>

            <TextBlock Text="Status:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ComboBox ItemsSource="{Binding StatusOptions}" 
                      SelectedItem="{Binding CurrentCall.Status}" />

            <TextBlock Text="Open Time:" FontWeight="Bold" Margin="0,10,0,0"/>
            <TextBox Text="{Binding CurrentCall.OpenTime}" IsReadOnly="True"/>
        </StackPanel>

        <GroupBox Header="Assignment History" Grid.Row="1" Margin="0,10,0,10">
            <DataGrid ItemsSource="{Binding Assignments}" AutoGenerateColumns="False" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Volunteer" Binding="{Binding VolunteerName}" />
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                    <DataGridTextColumn Header="Time" Binding="{Binding Time}" />
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Update" Width="100" Margin="0,0,10,0" Click="Update_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
