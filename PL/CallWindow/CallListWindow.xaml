<Window x:Class="PL.Call.CallListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:bo="clr-namespace:BO;assembly=BL"
        Title="Call List" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <DataGrid x:Name="CallDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False"
                  MouseDoubleClick="CallDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding CallId}" />
                <DataGridTextColumn Header="Type" Binding="{Binding CallType}" />
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" />
                <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime}" />
                <DataGridTextColumn Header="Time Remaining" Binding="{Binding TimeRemaining}" />
                <DataGridTextColumn Header="Volunteer" Binding="{Binding LastVolunteerName}" />
                <DataGridTextColumn Header="Completion Time" Binding="{Binding TotalCompletionTime}" />
                <DataGridTextColumn Header="Assignments" Binding="{Binding TotalAssignments}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
